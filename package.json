{
  "name": "@singintime/background-task",
  "version": "0.1.0",
  "description": "Makes iterative tasks non-blocking",
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "author": "Stefano Baldan <singintime@gmail.com>",
  "license": "ISC",
  "files": [
    "./lib/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "scripts": {
    "clean": "rm -rf ./lib ./docs",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json && mv ./lib/esm/index.js ./lib/esm/index.mjs",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "prepack": "npm run build",
    "test": "jest --ci --config ./jest.config.js",
    "docs": "typedoc ./src/index.ts --tsconfig ./tsconfig.base.json"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "jest": "^29.6.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.0",
    "typescript": "^5.2.2"
  }
}
